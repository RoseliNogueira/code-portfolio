                    <Label Content="ID Artiste" Height="27" HorizontalAlignment="Left" Margin="25,187,0,0" Name="lblIDArtOeuvre" VerticalAlignment="Top" Width="93" Grid.ColumnSpan="2" />
                    <Label Content="Afficher" Height="26" HorizontalAlignment="Left" Margin="27,268,0,0" Name="lblAfficher" VerticalAlignment="Top" Width="93" Grid.ColumnSpan="2" />
                    <Button Content="Liste Oeuvres" Height="25" HorizontalAlignment="Left" Margin="253,300,0,0" Name="buttonListeOeuvres" VerticalAlignment="Top" Width="95" Click="buttonListeOeuvres_Click" Grid.Column="1" />
                </Grid>
            </TabItem>
        </TabControl>
        <Label Content="Fichier" Height="34" HorizontalAlignment="Left" Margin="15,12,0,0" Name="label1" VerticalAlignment="Top" Width="130" FontSize="14" />
        <TextBlock Height="4" HorizontalAlignment="Left" Margin="-196,281,0,0" Name="textBlock1" Text="TextBlock" VerticalAlignment="Top" Width="2" />
        <Button Content="Fermer" Height="25" HorizontalAlignment="Left" Margin="504,390,0,0" Name="buttonFermer" VerticalAlignment="Top" Width="95" Click="buttonFermer_Click" />
        <TextBox Height="263" HorizontalAlignment="Left" Margin="12,421,0,0" Name="textBoxAfficherResult" VerticalAlignment="Top" Width="600" VerticalScrollBarVisibility="Auto"/>
