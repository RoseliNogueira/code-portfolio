                    <Label Content="État" Height="28" HorizontalAlignment="Left" Margin="282,52,0,0" Name="lblEtatOeuvre" VerticalAlignment="Top" Width="56" Grid.Column="1" />
                    <RadioButton Content="Exposée" Height="27" HorizontalAlignment="Left" Margin="282,86,0,0" Name="radioExposee" VerticalAlignment="Top" Grid.Column="1" Checked="radioExposee_Checked" />
                    <RadioButton Content="Entreposée" Height="27" HorizontalAlignment="Left" Margin="282,111,0,0" Name="radioEntreposee" VerticalAlignment="Top" Grid.Column="1" />
                    <Label Content="Année" Height="27" HorizontalAlignment="Left" Margin="25,121,0,0" Name="lblAnneeOeuvre" VerticalAlignment="Top" Width="93" Grid.ColumnSpan="2" />
                    <TextBox Height="27" HorizontalAlignment="Left" Margin="65,154,0,0" Name="txtValeurOeuvre" VerticalAlignment="Top" Width="198" Grid.Column="1" />
                    <Label Content="Valeur estimée" Height="27" HorizontalAlignment="Left" Margin="25,154,0,0" Name="lblValeurEstimeeOeuvre" VerticalAlignment="Top" Width="93" Grid.ColumnSpan="2" />
                    <TextBox Height="27" HorizontalAlignment="Left" Margin="65,187,0,0" Name="txtIDArtOeuvre" VerticalAlignment="Top" Width="198" Grid.Column="1" />
