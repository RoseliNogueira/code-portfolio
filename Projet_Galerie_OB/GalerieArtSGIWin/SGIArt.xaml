                    <Label Content="Nom" Margin="51,0,0,180" Name="lblNomConserv" Height="27" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="59" />
                    <Button Content="Ajouter" Height="25" HorizontalAlignment="Left" Margin="41,240,0,0" Name="buttonAjouterConserv" VerticalAlignment="Top" Width="95" Click="buttonAjouterConserv_Click" />
                    <Button Content="Sauvegarder" Height="25" HorizontalAlignment="Left" Margin="176,240,0,0" Name="buttonSauvegConserv" VerticalAlignment="Top" Width="95" Click="buttonSauvegConserv_Click" />
                    <Button Content="Afficher Liste" Height="25" HorizontalAlignment="Left" Margin="322,240,0,0" Name="buttonAfficherConserv" VerticalAlignment="Top" Width="95" Click="buttonAfficherConserv_Click" />
