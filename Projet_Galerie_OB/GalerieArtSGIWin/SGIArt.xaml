                </Grid>
            </TabItem>
            <TabItem Header="Artistes" Name="tabArtistes">
                <Grid>
                    <Label Content="Information des artistes" FontSize="14" FontStyle="Normal" FontWeight="SemiBold" ForceCursor="False" Height="31" Margin="25,25,118,0" Name="lblInfoArtist" VerticalAlignment="Top" />
                    <Label Content="Prénom" Height="26" HorizontalAlignment="Left" Margin="44,81,0,0" Name="lblPrenomArt" VerticalAlignment="Top" Width="59" />
                    <Label Content="Nom" Height="27" Margin="44,126,357,0" Name="lblNomArt" VerticalAlignment="Top" />
                    <Label ClipToBounds="True" Content="ID" Height="27" HorizontalAlignment="Left" Margin="44,169,0,0" Name="lblIDArt" VerticalAlignment="Top" Width="59" />
                    <Button Content="Ajouter" Height="25" HorizontalAlignment="Left" Margin="72,254,0,0" Name="buttonAjouterArt" VerticalAlignment="Top" Width="95" Click="buttonAjouterArt_Click" />
                    <Button Content="Afficher Liste" Height="25" HorizontalAlignment="Left" Margin="293,254,0,0" Name="buttonAfficherArt" VerticalAlignment="Top" Width="95" Click="buttonAfficherArt_Click" />
                    <TextBox Height="26" HorizontalAlignment="Left" Margin="120,81,0,0" Name="txtPrenomArt" VerticalAlignment="Top" Width="207" TextChanged="txtPrenomArt_TextChanged" />
                    <TextBox Height="27" HorizontalAlignment="Left" Margin="120,126,0,0" Name="txtNomArt" VerticalAlignment="Top" Width="207" TextChanged="txtNomArt_TextChanged" />
                    <TextBox Height="27" HorizontalAlignment="Left" Margin="120,169,0,0" Name="txtIDArt" VerticalAlignment="Top" Width="207" />
                </Grid>
            </TabItem>
            <TabItem Header="Oeuvres d'art" Name="tabOeuvresdart">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="68*" />
                        <ColumnDefinition Width="392*" />
                    </Grid.ColumnDefinitions>
                    <Label Content="Information des ouvres d'art" FontSize="14" FontStyle="Normal" FontWeight="SemiBold" ForceCursor="False" Height="31" Margin="10,10,133,0" Name="lblInfoOeuvre" VerticalAlignment="Top" Grid.ColumnSpan="2" />
                    <Label Content="ID" Height="26" HorizontalAlignment="Left" Margin="25,53,0,0" Name="lblIDOeuvre" VerticalAlignment="Top" Width="93" Grid.ColumnSpan="2" />
                    <Label Content="Titre" Height="27" Margin="25,84,0,0" Name="lblTitreOeuvre" VerticalAlignment="Top" HorizontalAlignment="Left" Width="93" Grid.ColumnSpan="2" />
