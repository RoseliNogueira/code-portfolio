<Window x:Class="GalerieArtSGIWin.Vendreuneoeuvre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vendre une oeuvre" Height="207" Width="334">
    <Grid>
        <Label Content="ID" Height="28" Margin="27,31,0,0" Name="lblIDOeuvVendre" VerticalAlignment="Top" HorizontalAlignment="Left" Width="80" />
        <Label Content="Prix de vente" HorizontalAlignment="Left" Margin="27,69,0,0" Name="lblPrixVente" Width="80" Height="28" VerticalAlignment="Top" />
        <TextBox Height="28" HorizontalAlignment="Left" Margin="113,31,0,0" Name="txtIDOeuvVendre" VerticalAlignment="Top" Width="149" />
        <TextBox Height="28" HorizontalAlignment="Left" Margin="113,69,0,0" Name="txtPrixVente" VerticalAlignment="Top" Width="149" />
        <Button Content="Annuler" Height="25" HorizontalAlignment="Left" Margin="44,0,0,22" Name="buttonAnnuler" VerticalAlignment="Bottom" Width="95" Click="buttonAnnuler_Click" />
        <Button Content="Vendre" Height="25" HorizontalAlignment="Right" Margin="0,0,30,22" Name="buttonVendre" VerticalAlignment="Bottom" Width="95" Click="buttonVendre_Click" />
    </Grid>
</Window>
